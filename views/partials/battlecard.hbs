<div class="battlesection">
  <div class="battleheader">
    {{bossName}} Lvl. {{level}}
  </div>
  <hr>
  <form method="post">
    <div class="battlebody">
      <img src="../images/battle/{{bossImg}}.png" class="mobpic">
      <div class="battlecontent">
        <div class="battledesc">
          {{description}}
        </div>

        <div class="battleopt">
          Possible Loot: {{loot}}
          <div class="buttonopt">
            <input name="solobattle" type="submit" class="battlebutton" onclick="taskAlert()" id="solobattle" value="SOLO">
            <input name="teambattle" type="submit" class="battlebutton" onclick="taskAlert()" id="teambattle" value="CO-OP (Forum)">
          </div>
        </div>

      </div>
    </div>
    <hr>
    <div class="battlefooter">
      <div class="slidecontainer">
        <input name="multiplier" type="range" min="1" max="100" value="1" class="slider" id="multiplier">
        <p class="outcome" id="multiplierLabel">{{multiplier}}</p>
      </div>
    </div>
  </form>
</div>
